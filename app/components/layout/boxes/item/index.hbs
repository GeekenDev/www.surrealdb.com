<layout-boxes-item tick={{@tick}} ...attributes>

	{{#if @image}}
		<pic><img src={{@image}} alt={{@title}}></pic>
	{{/if}}

	{{#if (or @stamp @title @label @text (has-block))}}
		<div>

			{{#if @stamp}}
				<p>{{@stamp}}</p>
			{{/if}}

			{{#if @title}}
				<h3>
					{{#if @tick}}
						<img src="/static/img/home/tick.svg" width={{20}} height={{20}} alt>
					{{/if}}
					{{@title}}
				</h3>
			{{/if}}

			{{#if @label}}
				<h4>
					{{#if @tick}}
						<img src="/static/img/home/tick.svg" width={{18}} height={{18}} alt>
					{{/if}}
					{{@label}}
				</h4>
			{{/if}}

			{{#if @text}}
				<p>{{@text}}</p>
			{{/if}}

			{{#if @buttontext}}
				<Button::Thicker @link={{@url}}>
					<span>{{@buttontext}}</span> <i class="fas fa-arrow-right"></i>
				</Button::Thicker>
			{{/if}}

			{{yield}}

		</div>
	{{/if}}

</layout-boxes-item>